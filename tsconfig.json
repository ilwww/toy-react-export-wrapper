{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
          "ESNext",
          "DOM",
          "DOM.Iterable"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": false,
        "allowJs": false,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "toy-react-export-wrapper": ["./src/index.ts"],
            "toy-react-export-wrapper/*": ["./src/*"]
        },
    },
    "include": ["src", "site", "*.ts"]
}
